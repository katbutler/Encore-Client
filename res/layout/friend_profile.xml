<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/background"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#EA6735"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

    <ImageView
        android:id="@+id/profilePic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:src="@drawable/anon_profile" />

    <TextView
        android:id="@+id/fullNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profilePic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#4E4E4E" />

    <TextView
        android:id="@+id/bioText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fullNameText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="My Bio"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#4E4E4E" />

    <ImageView
        android:id="@+id/friendsIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp"
        android:layout_marginRight="19dp"
        android:src="@drawable/friends" />

    <ImageView
        android:id="@+id/eventsIcon"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/friendsIcon"
        android:layout_below="@+id/friendsIcon"
        android:layout_marginTop="14dp"
        android:src="@drawable/mic" />

    <TextView
        android:id="@+id/friendsCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/friendsIcon"
        android:layout_toRightOf="@+id/eventsIcon"
        android:text="()"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#4E4E4E" />

    <TextView
        android:id="@+id/eventsCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/eventsIcon"
        android:layout_alignLeft="@+id/friendsCount"
        android:text="()"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#4E4E4E" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/bioText"
        android:layout_marginTop="24dp" >

    </ListView>

</RelativeLayout>